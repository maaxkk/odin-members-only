    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/stylesheets/become_member.css')
    body
    if !member
        form(method='POST' class='become_member__form')
                h1(class='become_member__title')= 'Become member ðŸ“ˆ'
                label(for='secret_code')= 'Secret code ðŸ”¥'
                input(type='text' class='become_member__input become_member__email' id='secret_code' name='secret'  placeholder='0123')
