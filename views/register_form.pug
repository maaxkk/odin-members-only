doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/stylesheets/register.css')
    body
        if !isAuth
            form(method='POST' class='register__form')
                h1(class='register__title')= 'Register'
                input(type='text' name='username' required=true class='register__input register__username'  placeholder='Username'
                value=(undefined === user ? '' : user.username) )
                input(type='email' name='email' required=true class='register__input register__email'  placeholder='Email'
                value=(undefined === user ? '' : user.email) )
                input(type='text' name='password' required=true class='register__input register__password' placeholder='Password')
                div(class='register__div_admin')
                    label(for='admin') Become admin:
                    input(type='checkbox' id='admin' name='admin' class='register__admin')
                if errors
                    ul(class='register__errors')
                        each error in errors
                            li(class='register__error')!= error.msg
                input(type='submit' class='register__submit' value='Register')
        else
            h1(class='register__title')= 'You are already registered. ðŸ¥³'
